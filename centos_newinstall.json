{
  "builders":[
    {
      "name": "docker-centos-6",
      "type": "docker",
      "image": "lsstsqre/centos:6-packerprep",
      "pull": false,
      "commit": true
    },
    {
      "name": "docker-centos-7",
      "type": "docker",
      "image": "lsstsqre/centos:7-packerprep",
      "pull": false,
      "commit": true
    },
    {
      "name": "openstack-centos-6",
      "type": "openstack",
      "ssh_username": "vagrant",
      "image_name": "centos-6-newinstall-{{user `build_timestamp`}}",
      "source_image": "eeb714c2-7b77-42e0-a376-adc1b19d9fe2",
      "use_floating_ip": true,
      "floating_ip_pool": "ext-net",
      "security_groups": ["default", "remote SSH"],
      "networks": ["fc77a88d-a9fb-47bb-a65d-39d1be7a7174"],
      "flavor": "m1.medium"
    },
    {
      "name": "openstack-centos-7",
      "type": "openstack",
      "ssh_username": "vagrant",
      "image_name": "centos-7-newinstall-{{user `build_timestamp`}}",
      "source_image": "3c48fc0c-a390-49be-8304-2ff7f2210345",
      "use_floating_ip": true,
      "floating_ip_pool": "ext-net",
      "security_groups": ["default", "remote SSH"],
      "networks": ["fc77a88d-a9fb-47bb-a65d-39d1be7a7174"],
      "flavor": "m1.medium"
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "curl https://raw.githubusercontent.com/petems/puppet-install-shell/master/install_puppet.sh | sudo sh"
      ]
    },
    {
      "type": "puppet-masterless",
       "manifest_file": "manifests/default.pp",
       "module_paths": ["./modules"],
       "facter": {
         "lsst_stack_path": "{{user `stack_path`}}"
       }
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-newinstall-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-newinstall",
      "force": "true"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-newinstall-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-newinstall",
      "force": "true"
    }
  ],
  "variables": {
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "stack_path": "/opt/lsst/software/stack"
  }
}
