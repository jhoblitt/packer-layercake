{
  "builders":[
    {
      "name": "docker-centos-6",
      "type": "docker",
      "image": "lsstsqre/centos:6-{{user `parent_name`}}",
      "pull": false,
      "commit": true
    },
    {
      "name": "docker-centos-7",
      "type": "docker",
      "image": "lsstsqre/centos:7-{{user `parent_name`}}",
      "pull": false,
      "commit": true
    },
    {
      "name": "openstack-centos-6",
      "type": "openstack",
      "ssh_username": "vagrant",
      "image_name": "centos-6-newinstall-{{user `build_timestamp`}}",
      "source_image": "{{user `openstack-centos-6-source_image`}}",
      "use_floating_ip": true,
      "floating_ip_pool": "ext-net",
      "security_groups": ["default", "remote SSH"],
      "networks": ["fc77a88d-a9fb-47bb-a65d-39d1be7a7174"],
      "flavor": "m4.large"
    },
    {
      "name": "openstack-centos-7",
      "type": "openstack",
      "ssh_username": "vagrant",
      "image_name": "centos-7-newinstall-{{user `build_timestamp`}}",
      "source_image": "{{user `openstack-centos-7-source_image`}}",
      "use_floating_ip": true,
      "floating_ip_pool": "ext-net",
      "security_groups": ["default", "remote SSH"],
      "networks": ["fc77a88d-a9fb-47bb-a65d-39d1be7a7174"],
      "flavor": "m4.large"
    },
    {
      "name": "aws-centos-6",
      "type": "amazon-ebs",
      "ami_name": "centos-6-newinstall-{{user `build_timestamp`}}",
      "instance_type": "c4.2xlarge",
      "region": "{{user `aws_default_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "ssh_pty": true,
      "ssh_username": "vagrant",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2"
        }
      ]
    },
    {
      "name": "aws-centos-7",
      "type": "amazon-ebs",
      "ami_name": "centos-7-newinstall-{{user `build_timestamp`}}",
      "instance_type": "c4.2xlarge",
      "region": "{{user `aws_default_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "ssh_pty": true,
      "ssh_username": "vagrant",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2"
        }
      ]
    }
  ],
  "provisioners":[
    {
      "type": "puppet-masterless",
       "manifest_file": "manifests/newinstall.pp",
       "module_paths": ["./modules"],
       "facter": {
         "lsst_stack_path": "{{user `stack_path`}}"
       }
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-{{user `parent_name`}}-{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-{{user `parent_name`}}-{{user `build_name`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-{{user `parent_name`}}-{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-{{user `parent_name`}}-{{user `build_name`}}",
      "force": "false"
    }
  ],
  "variables": {
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "stack_path": "/opt/lsst/software/stack",
    "aws_default_region": "us-east-1",
    "parent_name": "stackbase-devtoolset-6",
    "build_name": "newinstall",
    "source_ami": "",
    "openstack-centos-6-source_image": "",
    "openstack-centos-7-source_image": ""
  }
}
