{
  "builders":[
    {
      "name": "docker-centos-7",
      "type": "docker",
      "image": "lsstsqre/centos:7-{{user `parent_name`}}",
      "pull": false,
      "commit": true
    },
    {
      "name": "docker-centos-6",
      "type": "docker",
      "image": "lsstsqre/centos:6-{{user `parent_name`}}",
      "pull": false,
      "commit": true
    }
  ],
  "provisioners":[
    {
      "type": "puppet-masterless",
       "manifest_file": "manifests/stackbase.pp",
       "module_paths": ["./modules"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-{{user `build_name`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-{{user `build_name`}}",
      "force": "false"
    }
  ],
  "variables": {
    "parent_name": "packerprep",
    "build_name": "stackbase",
    "build_timestamp": "{{isotime \"20060102150405\"}}"
  }
}
