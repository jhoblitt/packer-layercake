{
  "builders":[
    {
      "name": "docker",
      "type": "docker",
      "image": "{{user `base_image`}}",
      "pull": false,
      "commit": true
    }
  ],
  "provisioners":[
    {
      "type": "puppet-masterless",
       "manifest_file": "manifests/stackbase.pp",
       "module_paths": ["./modules"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker"],
      "repository": "{{user `build_repository`}}",
      "tag": "{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker"],
      "repository": "{{user `build_repository`}}",
      "tag": "{{user `build_name`}}",
      "force": "false"
    },
    {
      "type": "manifest"
    }
  ],
  "variables": {
    "base_image": "docker.io/lsstsqre/centos:7-packerprep",
    "build_repository": "docker.io/lsstsqre/centos",
    "build_name": "7-stackbase",
    "build_timestamp": "{{isotime \"20060102150405\"}}"
  }
}
