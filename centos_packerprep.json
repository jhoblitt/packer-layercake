{
  "builders":[
    {
      "name": "docker-centos-7",
      "type": "docker",
      "image": "centos:7",
      "commit": true
    },
    {
      "name": "docker-centos-6",
      "type": "docker",
      "image": "centos:6",
      "pull": false,
      "commit": true
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "yum install -y wget sudo",
        "sed -i 's/^.*requiretty/#Defaults requiretty/' /etc/sudoers",
        "yum clean all"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "sqre/centos",
      "tag": "6-packerprep-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "sqre/centos",
      "tag": "6-packerprep",
      "force": "true"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "sqre/centos",
      "tag": "7-packerprep-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "sqre/centos",
      "tag": "7-packerprep",
      "force": "true"
    }
  ],
  "variables": {
    "build_timestamp": "{{isotime \"20060102150405\"}}"
  }
}
