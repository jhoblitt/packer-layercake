{
  "builders":[
    {
      "name": "docker-centos-7",
      "type": "docker",
      "image": "docker.io/centos:7",
      "pull": false,
      "commit": true
    },
    {
      "name": "docker-centos-6",
      "type": "docker",
      "image": "docker.io/centos:6",
      "pull": false,
      "commit": true
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "yum install -y wget sudo",
        "sed -i 's/^.*requiretty/#Defaults requiretty/' /etc/sudoers"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "yum clean all -y",
        "yum update -y",
        "curl https://raw.githubusercontent.com/petems/puppet-install-shell/master/install_puppet.sh | sudo sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-6"],
      "repository": "lsstsqre/centos",
      "tag": "6-{{user `build_name`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-{{user `build_name`}}-{{user `build_timestamp`}}",
      "force": "false"
    },
    {
      "type": "docker-tag",
      "only": ["docker-centos-7"],
      "repository": "lsstsqre/centos",
      "tag": "7-{{user `build_name`}}",
      "force": "false"
    },
    {
      "type": "manifest"
    }
  ],
  "variables": {
    "build_name": "packerprep",
    "build_timestamp": "{{isotime \"20060102150405\"}}"
  }
}
