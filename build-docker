#!/usr/bin/env bash

set -o errexit

TAG=${TAG:-w_2016_05}
PRODUCTS=${PRODUCTS:-lsst_distrib}

DOCKERFILE_POST=$(cat <<'EOF'
USER vagrant
WORKDIR /home/vagrant
EOF
)

print_error() {
    >&2 echo -e "$@"
}

usage() {
    if [[ ! -z "$1" ]]; then
        print_error "$0: $1"
    fi
    print_error
    print_error "Usage: $0 <step>"
    exit 1
}

if [[ $# -eq 0 ]]; then
    usage "<step> option required"
fi

if [[ $# -gt 1 ]]; then
    usage "only one option is allowed"
fi

case $1 in
    packerprep | newinstall | build | push)
        STEP=$1
        ;;
    *)
        [[ $# -gt 0 ]] && usage "Unknown option: $1"
        ;;
esac

echo "building step: $STEP"


setup() {
    make
    bundle install
    bundle exec librarian-puppet install
}

case $STEP in
    packerprep)
        setup
        ./bin/packer build --only=docker-centos-6,docker-centos-7 centos_packerprep.json
        ;;
    newinstall)
        setup
        ./bin/packer build --only=docker-centos-6,docker-centos-7 centos_newinstall.json
        ;;
    build)
        setup

        ./bin/packer build --only=docker-centos-7 -var tag="$TAG" -var products="$PRODUCTS" centos_build.json

        # packer can't set the USER or WORKDIR on a container so we are using trivial
        # Dockerfiles that overwrite the short tag name (the one without the timestamp)
        # XXX this is non-idempotent
        #echo "FROM lsstsqre/centos:6-stack-${PRODUCTS}-${TAG}" > docker/centos-6/Dockerfile
        #echo "$DOCKERFILE_POST" >> docker/centos-6/Dockerfile
        #docker build -t "lsstsqre/centos:6-stack-${PRODUCTS}-${TAG}" docker/centos-6/

        echo "FROM lsstsqre/centos:7-stack-${PRODUCTS}-${TAG}" > docker/centos-7/Dockerfile
        echo "$DOCKERFILE_POST" >> docker/centos-7/Dockerfile
        docker build -t "lsstsqre/centos:7-stack-${PRODUCTS}-${TAG}" docker/centos-7/
        ;;
    push)
        docker push "lsstsqre/centos:6-stack-${PRODUCTS}-${TAG}"
        docker push "lsstsqre/centos:7-stack-${PRODUCTS}-${TAG}"
        ;;
esac
